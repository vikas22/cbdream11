<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th style="text-align:left">Name</th>
      <th>count </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <% if(user.id != 1) %>
    <tr>
      <td style="text-align:left"><%= link_to user.name , "/players/user/" + user.id.to_s %> </td>
      <td><center><%= @counts[user.id] %></center></td>
      <!-- <td><%= link_to 'team', "/players/user/" + user.id.to_s %></td> -->
    </tr>
    <%end%>
    <% end %>
  </tbody>
</table>

