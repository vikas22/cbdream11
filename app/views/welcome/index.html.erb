<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>players count </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <% if(user.id != 1) %>
    <tr>
      <td><%= link_to user.name , "/players/user/" + user.id.to_s %> </td>
      <td><center><%= Player.where(user_id: user.id).count.to_s %></center></td>
      <!-- <td><%= link_to 'team', "/players/user/" + user.id.to_s %></td> -->
    </tr>
    <%end%>
    <% end %>
  </tbody>
</table>

