<p id="notice"><%= notice %></p>

<h1>Players of <%=@user.name%></h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Team</th>
      <th>captain</th>
      <th>vice-captain</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.id %></td>
        <td><%= player.name %></td>
        <td><%= player.team.name %></td>
        <% if(player.is_captain) %>
        <td>YES</td>
        <% else %>
        <td> - </td>
        <%end%>
        <% if(player.is_vice_captain) %>
        <td>YES</td>
        <% else %>
        <td> - </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
